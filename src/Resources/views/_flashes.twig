{% for success in app.session.flashbag.get('success') %}
<div class="alert alert-success" role="alert">
    <span class="bi-check2-square"></span> {{ success }}
</div>
{% endfor %}
{% for danger in app.session.flashbag.get('danger') %}
<div class="alert alert-danger" role="alert">
    <span class="bi-exclamation-triangle-fill"></span> {{ danger }}
</div>
{% endfor %}
{% for warning in app.session.flashbag.get('warning') %}
<div class="alert alert-warning" role="alert">
  <span class="bi-bell-fill"></span> {{ warning }}
</div>
{% endfor %}
{% for info in app.session.flashbag.get('info') %}
<div class="alert alert-info" role="alert">
    <span class="bi-info-square"></span> {{ info }}
</div>
{% endfor %}